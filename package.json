{
    "name": "bit-mages-theme",
    "version": "1.0.0",
    "description": "Tema WordPress para Bit Mages",
    "main": "index.js",
    "scripts": {
      "dev": "npm run watch",
      "watch": "watch 'npm run build' assets/src",
      "build": "npm run build:css && npm run build:js",
      "build:css": "postcss assets/src/css/main.css -o style.css",
      "build:js": "webpack --mode production"
    },
    "keywords": [
      "wordpress",
      "theme",
      "bitmages"
    ],
    "author": "Bit Mages",
    "license": "GPL-2.0-or-later",
    "devDependencies": {
      "autoprefixer": "^10.4.0",
      "postcss": "^8.4.0",
      "postcss-cli": "^9.0.0",
      "webpack": "^5.0.0",
      "webpack-cli": "^4.0.0"
    }
  }